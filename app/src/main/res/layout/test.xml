<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/text1"
        android:text="1"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#f20"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text2"
        android:text="2"
        android:gravity="center"
        android:layout_toRightOf="@id/text1"
        android:layout_below="@+id/text1"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#20A710"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text3"
        android:text="3"
        android:gravity="center"
        android:layout_toRightOf="@id/text2"
        android:layout_below="@+id/text2"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#80724B"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text4"
        android:text="4"
        android:gravity="center"
        android:layout_toRightOf="@id/text3"
        android:layout_below="@+id/text3"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#CE0BAD"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text5"
        android:text="5"
        android:gravity="center"
        android:layout_toLeftOf="@id/text4"
        android:layout_below="@+id/text4"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#AE0DEB"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text6"
        android:text="6"
        android:gravity="center"
        android:layout_toLeftOf="@id/text5"
        android:layout_below="@+id/text5"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#FFEB3B"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text7"
        android:text="7"
        android:gravity="center"
        android:layout_toLeftOf="@id/text6"
        android:layout_below="@+id/text6"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#02F5DE"
        android:layout_width="100dp"
        android:layout_height="50dp" />




</RelativeLayout>