<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#e2e3eb"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/text4"
        android:text="4"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#FF00E5"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text3"
        android:text="3"
        android:layout_toLeftOf="@id/text4"
        android:layout_above="@id/text4"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#FFFB00"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text2"
        android:text="2"
        android:layout_toLeftOf="@id/text3"
        android:layout_above="@id/text3"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#009688"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text1"
        android:text="1"
        android:layout_toLeftOf="@id/text2"
        android:layout_above="@id/text2"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#f20"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text5"
        android:text="5"
        android:layout_toLeftOf="@id/text4"
        android:layout_below="@id/text4"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#8800FF"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text6"
        android:text="6"
        android:layout_toLeftOf="@id/text5"
        android:layout_below="@id/text5"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#FF5722"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text7"
        android:text="7"
        android:layout_toLeftOf="@id/text6"
        android:layout_below="@id/text6"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#02FDE6"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp" />

</RelativeLayout>